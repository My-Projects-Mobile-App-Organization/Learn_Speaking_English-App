<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_dialog_failed_question">

    <TextView
        android:id="@+id/titleTxtPDL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="It's not correct. Let's see what's wrong: "
        android:textColor="#CA0F3E"
        android:layout_marginTop="5dp"
        android:textSize="27dp"
        android:textStyle="bold"/>

    <TextView
        android:padding="15dp"
        android:background="@drawable/background_white_achievement_conversation_result"
        android:id="@+id/contentTxtFailedDialogRes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xin chÃ o "
        android:textColor="#BC1717"
        android:layout_marginTop="10dp"
        android:textSize="23sp"/>

    <Button
        android:background="@drawable/background_button_check_failed_red"
        android:id="@+id/btnNextQuestionFailedDialogRes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="25dp"
        android:textColor="#FFFFFF"
