<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragmentUI.MatchWordSoundFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:id="@+id/txtExitTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/word"
            />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/custom_progress_bg"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/heart_vers"
            />
        <ImageView
            android:layout_marginLeft="-15dp"
            android:padding="15dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/infinite"
            />
    </LinearLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhấn vào các cặp tương ứng"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/txtTitleMW"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="20dp"
        android:layout_weight="2.75"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/btn1ChoiceMW"
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:background="@drawable/background_shadow_board"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/loudsp1MW"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="0dp"
                    android:backgroundTint="@color/colorPurple"
                    android:src="@drawable/loudsp" />

                <ImageView
                    android:id="@+id/wave1MW"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/soundwave" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_shadow_board"
                android:id="@+id/btn2ChoiceMW"
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/loudsp2MW"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="0dp"
                    android:backgroundTint="@color/colorPurple"
                    android:src="@drawable/loudsp" />

                <ImageView
                    android:id="@+id/wave2MW"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/soundwave" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_shadow_board"
                android:id="@+id/btn3ChoiceMW"
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:text="@string/app_name"
                android:textColor="@color/black">

                <ImageView
                    android:id="@+id/loudsp3MW"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="0dp"
                    android:backgroundTint="@color/colorPurple"
                    android:src="@drawable/loudsp" />

                <ImageView
                    android:id="@+id/wave3MW"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/soundwave" />
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/background_shadow_board"
                android:id="@+id/btn4ChoiceMW"
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:text="@string/app_name"
                android:textColor="@color/black">

                <ImageView
                    android:id="@+id/loudsp4MW"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="0dp"
                    android:backgroundTint="@color/colorPurple"
                    android:src="@drawable/loudsp" />

                <ImageView
                    android:id="@+id/wave4MW"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/soundwave" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <TextView
                android:textColor="@color/black"
                android:background="@drawable/background_shadow_board"
                android:layout_marginBottom="10dp"
                android:text="dd"
                android:padding="10dp"
                android:gravity="center"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/txt1ChoiceMW"
                />
            <TextView
                android:textColor="@color/black"
                android:padding="10dp"
                android:background="@drawable/background_shadow_board"
                android:layout_marginBottom="10dp"
                android:text="dd"
                android:gravity="center"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/txt2ChoiceMW"
                />
            <TextView
                android:textColor="@color/black"

                android:padding="10dp"
                android:background="@drawable/background_shadow_board"
                android:layout_marginBottom="10dp"
                android:text="dd"
                android:gravity="center"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/txt3ChoiceMW"
                />
            <TextView
                android:textColor="@color/black"

                android:padding="10dp"
                android:background="@drawable/background_shadow_board"
                android:text="dd"
                android:gravity="center"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/txt4ChoiceMW"
                />
        </LinearLayout>



    </LinearLayout>
</LinearLayout>