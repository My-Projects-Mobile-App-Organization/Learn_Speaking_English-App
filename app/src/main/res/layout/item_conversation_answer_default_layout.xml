<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/llChat"
        >

        <ImageView
            android:id="@+id/imgCharacterQuesTypeDefault"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:paddingHorizontal="5dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_girl_comunicator"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtContentConversationQuesTypeDefault"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/txtContentConversationQuesTypeDefault"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_shadow_chat_item_answer"
            android:padding="30dp"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.9"
            app:layout_constraintWidth_percent="0.8" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>