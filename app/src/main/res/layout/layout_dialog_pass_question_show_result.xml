    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_dialog_pass_question">

    <TextView
        android:id="@+id/titleTxtPDL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Well done. Let's see the answer: "
        android:textColor="#057805"
        android:layout_marginTop="5dp"
        android:textSize="27dp"
        android:textStyle="bold"/>

    <TextView
        android:padding="15dp"
        android:background="@drawable/background_white_achievement_conversation_result"
        android:id="@+id/contentTxtDialogRes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
