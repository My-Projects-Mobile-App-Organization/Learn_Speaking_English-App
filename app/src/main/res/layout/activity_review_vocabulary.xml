<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReviewVocabularyActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtExitReviewVocab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/word"
            android:backgroundTint="#FF1100" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rcv_list_vocab_review"
        android:layout_margin="10dp"
        />
    <ImageView
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/imgRotate"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_rotate"
        />
    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/btnNextVocabReview"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/background_shadow_blue_board"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_gravity="bottom"
        />

</LinearLayout>