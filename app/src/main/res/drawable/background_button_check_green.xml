<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <corners android:radius="15dp" />

            <padding
                android:top="0dp"
                android:right="0dp"
                android:left="0dp"
                android:bottom="6dp"/>

            <solid android:color="#057805" />
        </shape>
    </item>


    <!-- Background -->
    <item>
        <shape>

            <solid android:color="#0BEF0B" />

            <corners android:radius="15dp" />
        </shape>
    </item>

</layer-list>

