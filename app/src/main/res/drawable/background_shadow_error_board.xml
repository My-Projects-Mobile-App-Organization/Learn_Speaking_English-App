<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <corners android:radius="15dp" />

            <padding
                android:top="2dp"
                android:right="2dp"
                android:left="2dp"
                android:bottom="4dp"/>

            <solid android:color="#FF6666" />
        </shape>
    </item>


    <!-- Background -->
    <item>
        <shape>

            <solid android:color="#FF9999" />

            <corners android:radius="15dp" />
        </shape>
    </item>

</layer-list>